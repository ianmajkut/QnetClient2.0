<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:orientation="vertical">



    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="165dp"
        android:layout_marginBottom="46dp"
        android:fontFamily="@font/helvetica_now_text_ext_bd_ita"
        android:gravity="center"
        android:text="@string/verificacion"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:fontFamily="@font/helvetica_now_text_ext_bd_ita"
        android:gravity="center"
        android:text="DE CONTRASEÑA"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="39sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/helvetica_now_text_regular"
        android:gravity="center"
        android:text="Revise su casilla de correo electrónico y verifique la nueva contraseña "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/verification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <Button
        android:id="@+id/verification"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginBottom="190dp"
        android:backgroundTint="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/verificar"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>