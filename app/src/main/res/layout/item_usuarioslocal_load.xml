<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <View
            android:id="@+id/tittle"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/helvetica_now_text_black"
            android:text="@string/usuario"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/placerholder_bg"/>


        <View
            android:id="@+id/positiontitle"
            android:layout_width="100dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/helvetica_now_text_reg_ita"
            android:text="@string/posici_n"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/Fila"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tittle"
            android:background="@color/placerholder_bg"/>

        <View
            android:id="@+id/position"
            android:layout_width="10dp"
            android:layout_height="18dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/helvetica_now_text_reg_ita"
            android:text="@string/posici_n"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/positiontitle"
            app:layout_constraintStart_toEndOf="@id/positiontitle"
            app:layout_constraintTop_toBottomOf="@+id/tittle"
            android:background="@color/placerholder_bg"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>